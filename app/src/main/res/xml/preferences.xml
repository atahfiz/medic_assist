<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="username"
        android:title="Your Name"
        android:summary="none"
        android:defaultValue="John Doe"
        android:dialogTitle="Enter Your Name"/>

    <ListPreference
        android:key="category_age"
        android:title="Your Age"
        android:summary="Select Your Age"
        android:defaultValue="0"
        android:entryValues="@array/category_values"
        android:entries="@array/age_categories"/>

    <CheckBoxPreference
        android:key="enable_background"
        android:title="Work in background"
        android:summary="May increase battery consumption"
        android:defaultValue="true"/>

    <SwitchPreference
        android:key="switch"
        android:title="Update Location Automatically"
        android:summary="May increase battery consumption"/>

</PreferenceScreen>